    <changeSet id="alter_table_cars_add_ref" author="Klimovich">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="cars"/>
        </preConditions>
        <addColumn tableName="cars">
            <column name="owner_id" type="bigint">
                <constraints foreignKeyName="fk_cars_on_owner"
                             referencedTableName="persons"
                             referencedColumnNames="id"
                             nullable="false"
                             deleteCascade="true"/>
            </column>
        </addColumn>
    </changeSet>


