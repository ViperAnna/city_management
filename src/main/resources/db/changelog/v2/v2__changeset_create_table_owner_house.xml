<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="create_table_owner_house" author="Klimovich">
<!--        <preConditions onFail="MARK_RAN">-->
<!--                <tableExists tableName="persons"/>-->
<!--                <tableExists tableName="houses"/>-->
<!--        </preConditions>-->
        <createTable tableName="owner_house">
            <column name="owner_id" type="bigint">
                <constraints nullable="true"
                             foreignKeyName="fk_owner_house_person"
                             referencedTableName="persons"
                             referencedColumnNames="id"/>
            </column>
            <column name="house_id" type="bigint">
                <constraints nullable="false"
                foreignKeyName="fk_person_owner_house"
                referencedTableName="houses"
                referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>